{
  "name": "gemini-google-theme",
  "displayName": "Gemini Google Theme",
  "version": "0.0.1",
  "description": "Brings a Google-inspired AI theme to Gemini with animated rainbow accents and a clean toggle control.",
  "author": "Nub",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "sharp": "^0.33.5",
    "typescript": "5.3.3"
  },
  "icon": "assets/icon.png",
  "manifest": {
    "short_name": "Gemini Google Theme",
    "host_permissions": [
      "https://gemini.google.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "gemini-google-theme@nub.dev",
        "strict_min_version": "142.0",
        "data_collection_permissions": {
          "required": ["none"],
          "optional": []
        }
      }
    }
  }
}
